@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Form Input Iuran";
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}


<!-- Begin Page Content -->
<div class="container-fluid">



    <!-- Content Row -->
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="container mt-4">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2>Hubungi Kami</h2>
                </div>
                <div id="messageBox" class="alert d-none"></div>

                <form id="contactForm" class="p-3">
                    <div class="mb-3 w-75">
                        <label for="name" class="col-form-label-sm">Nama</label>
                        <input type="text" id="name" name="name" class="form-control">
                        <small class="text-danger d-none" id="nameError">Nama wajib diisi.</small>
                    </div>

                    <div class="mb-3 w-75">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" name="email" class="form-control">
                        <small class="text-danger d-none" id="emailError">Format email tidak valid.</small>
                    </div>

                    <div class="mb-3 w-75">
                        <label for="message" class="form-label">Pesan</label>
                        <textarea id="message" name="message" class="form-control" rows="4"></textarea>
                        <small class="text-danger d-none" id="messageError">Pesan wajib diisi.</small>
                    </div>

                    <button type="submit" class="btn btn-primary">Kirim</button>

                    <a href="@Url.Action("About", "Home")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                </form>

                <!-- Bagian Kontak Kami -->
                <div class="card-footer bg-light text-dark text-center">
                    <h5 class="mt-3">Kontak Kami</h5>
                    <p>
                        <i class="bi bi-whatsapp"></i> WhatsApp: <a href="https://wa.me/6281234567890" target="_blank">+62 812-3456-7890</a>
                    </p>
                    <p>
                        <i class="bi bi-envelope"></i> Email: <a href="mailto:info@example.com">info@example.com</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->

</div>
<!-- End of Main Content -->
<!-- Footer -->
<footer class="sticky-footer bg-white">
    <div class="container my-auto">
        <div class="copyright text-center my-auto">
            <span>Copyright &copy; @DateTime.Now.Year. RT005/RW006</span>
        </div>
    </div>
</footer>
<!-- End of Footer -->
<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <a class="btn btn-primary" href="@Url.Action("LogOut", "Login" )">Logout</a>
            </div>
        </div>
    </div>
</div>

<script src="~/Js/Kontak.js"></script>